<div class="flashes-container">
  {{#if flashMessages}}
    {{#each flashMessages.queue as |flash|}}
      {{flash-message flash=flash}}
    {{/each}}
  {{/if}}
</div>
<div id="bodywrapper" class="bodywrapper {{if isEmbeddedPage 'bodywrapper--embedded' }} {{if isSideNavVisible 'bodywrapper-hidden'}}">
  {{outlet}}
</div>

{{#if showMenus}}
  {{logo-button action="toggleSideNav" category=category}}

  {{side-nav visible=isSideNavVisible}}

  {{fade-screen visible=isSideNavVisible action="toggleSideNav"}}
{{/if}}

