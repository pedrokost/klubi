<div class="flashes-container">
  {{#if flashMessages}}
    {{#each flashMessages.queue as |flash|}}
      <FlashMessage @flash={{flash}} />
    {{/each}}
  {{/if}}
</div>

<div id="bodywrapper" class="bodywrapper {{if isEmbeddedPage 'bodywrapper--embedded' }} {{if isSideNavVisible 'bodywrapper-hidden'}}">
  {{outlet}}
</div>

{{#if showMenus}}
  <LogoButton @onClick={{action "toggleSideNav"}} @category={{category}} />

  <SideNav @visible={{isSideNavVisible}}/>

  <FadeScreen @visible={{isSideNavVisible}} @onClick={{action "toggleSideNav"}} />
{{/if}}
